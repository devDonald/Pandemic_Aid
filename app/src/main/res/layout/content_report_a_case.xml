<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_height="match_parent"
        >
        <ScrollView
            android:background="@drawable/border_red"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/home_head1"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Report a Case to Us"
                        />

                    <View
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_width="100dp"
                        android:layout_gravity="center"
                        android:layout_height="2dp"
                        android:background="@android:color/black"
                        />
                    <View
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:layout_width="100dp"
                        android:layout_height="2dp"
                        android:background="@android:color/black"

                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/home_head2"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="casual"
                        android:text="For Reports, enquiries and questions"
                        />

                    <View
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:color/black"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:background="@drawable/border_red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:hintTextColor="@color/black"
                        android:hint="Name"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:textColor="@color/black"
                            android:textAlignment="textStart"
                            android:padding="5dp"
                            android:id="@+id/report_name"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:background="@drawable/border_red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:hintTextColor="@color/black"
                        android:hint="Phone Number"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:textColor="@color/black"
                            android:textAlignment="textStart"
                            android:maxLength="11"
                            android:padding="5dp"
                            android:id="@+id/report_number"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:background="@drawable/border_red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:hintTextColor="@color/black"
                        android:hint="Comment"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine|textCapSentences"
                            android:lines="5"
                            android:textColor="@color/black"
                            android:textAlignment="textStart"
                            android:padding="5dp"
                            android:id="@+id/report_comment"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:background="@drawable/border_red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_marginStart="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="State"
                                android:textColor="@color/black"

                                />
                            <TextView
                                android:layout_marginStart="140dp"
                                android:layout_gravity="end"
                                android:gravity="end"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LGA"
                                android:textColor="@color/black"

                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <Spinner
                                android:id="@+id/stateSpinner1"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1" />

                            <Spinner
                                android:id="@+id/lgaSpinner1"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="1" />
                        </LinearLayout>
                    </LinearLayout>

                   <HorizontalScrollView
                       android:background="@drawable/border_red"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:scrollbars="horizontal"
                       >
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">
                           <RadioGroup
                               android:layout_margin="10dp"
                               android:id="@+id/rsoar_group"
                               android:orientation="horizontal"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">

                               <TextView
                                   android:padding="8dp"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="Do they have Soar Throat?"
                                   android:textColor="@android:color/holo_blue_dark"
                                   android:textStyle="bold"
                                   android:id="@+id/rsoar_text"
                                   />
                               <RadioButton
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:id="@+id/rsoar_yes"
                                   android:hint="Yes"
                                   android:textColorHint="@android:color/holo_blue_dark"
                                   />

                               <RadioButton
                                   android:textColorHint="@android:color/holo_blue_dark"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:id="@+id/rsoar_no"
                                   android:hint="No"
                                   />
                           </RadioGroup>
                           <RadioGroup
                               android:layout_margin="10dp"
                               android:id="@+id/rcough_group"
                               android:orientation="horizontal"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">

                               <TextView
                                   android:padding="8dp"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="Do they have Dry Cough?"
                                   android:textColor="@android:color/holo_blue_dark"
                                   android:textStyle="bold"
                                   android:id="@+id/rcough_text"
                                   />
                               <RadioButton
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:id="@+id/rcough_yes"
                                   android:hint="Yes"
                                   android:textColorHint="@android:color/holo_blue_dark"
                                   />

                               <RadioButton
                                   android:textColorHint="@android:color/holo_blue_dark"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:id="@+id/rcough_no"
                                   android:hint="No"
                                   />
                           </RadioGroup>
                           <RadioGroup
                               android:layout_margin="10dp"
                               android:id="@+id/rrecent_group"
                               android:orientation="horizontal"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">

                               <TextView
                                   android:padding="8dp"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="Have you travelled recently in the Last 14 days?"
                                   android:textColor="@android:color/holo_blue_dark"
                                   android:textStyle="bold"
                                   android:id="@+id/rrecent_text"
                                   />
                               <RadioButton
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:id="@+id/rrecent_yes"
                                   android:hint="Yes"
                                   android:textColorHint="@android:color/holo_blue_dark"
                                   />

                               <RadioButton
                                   android:textColorHint="@android:color/holo_blue_dark"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:id="@+id/rrecent_no"
                                   android:hint="No"
                                   />
                           </RadioGroup>
                           <RadioGroup
                               android:layout_margin="10dp"
                               android:id="@+id/rhistory_group"
                               android:orientation="horizontal"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">

                               <TextView
                                   android:padding="8dp"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="Do you have a travel history to a COVID-19 Infected Area?"
                                   android:textColor="@android:color/holo_blue_dark"
                                   android:textStyle="bold"
                                   android:id="@+id/rtravel_history_text"
                                   />
                               <RadioButton
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:id="@+id/rhistory_yes"
                                   android:hint="Yes"
                                   android:textColorHint="@android:color/holo_blue_dark"
                                   />

                               <RadioButton
                                   android:textColorHint="@android:color/holo_blue_dark"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:id="@+id/rhistory_no"
                                   android:hint="No"
                                   />
                           </RadioGroup>
                           <RadioGroup
                               android:layout_margin="10dp"
                               android:id="@+id/rdirect_group"
                               android:orientation="horizontal"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">

                               <TextView
                                   android:padding="8dp"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="Did you have direct contact or are taking care of a COVID-19 Patient?"
                                   android:textColor="@android:color/holo_blue_dark"
                                   android:textStyle="bold"
                                   android:id="@+id/rdirect_contact_text"
                                   />
                               <RadioButton
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:id="@+id/rdirect_yes"
                                   android:hint="Yes"
                                   android:textColorHint="@android:color/holo_blue_dark"
                                   />

                               <RadioButton
                                   android:textColorHint="@android:color/holo_blue_dark"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:id="@+id/rdirect_no"
                                   android:hint="No"
                                   />
                           </RadioGroup>
                       </LinearLayout>
                   </HorizontalScrollView>

                    <Button
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:id="@+id/bt_report_case"
                        android:textColor="@color/white"
                        android:background="@drawable/background_red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginBottom="20dp"
                        android:text="Send Report"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </ScrollView>

    </fragment>
</FrameLayout>