<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <fragment
        android:id="@+id/map1"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        >

    </fragment>
    <ScrollView
        android:layout_alignParentTop="true"
        android:background="@drawable/border_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_head1"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Select The Symptoms You Are Having?"
                    />

                <View
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="100dp"
                    android:layout_gravity="center"
                    android:layout_height="2dp"
                    android:background="@android:color/holo_red_dark"
                    />
                <View
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:background="@android:color/holo_red_dark"

                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_head2"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Check the boxes that correspond to your symptoms"
                    />

                <View
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <CheckBox
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Do You Have Dry Cough?"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:id="@+id/test_dry_cough"
                        android:onClick="onCheckboxClicked"
                        />
                    <CheckBox
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Do you have Cold?"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:id="@+id/test_cold"
                        android:onClick="onCheckboxClicked"
                        />
                    <CheckBox
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Do you have Sore Throat?"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:id="@+id/test_sore"
                        android:onClick="onCheckboxClicked"
                        />
                    <CheckBox
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Do you have Diarrhea?"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:id="@+id/test_diarrhea"
                        android:onClick="onCheckboxClicked"
                        />
                    <CheckBox
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Do you have a Head Ache?"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:id="@+id/test_headaches"
                        android:onClick="onCheckboxClicked"
                        />
                    <CheckBox
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Are you experiencing Fatigue?"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:id="@+id/test_fatigue"
                        android:onClick="onCheckboxClicked"
                        />
                    <CheckBox
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Do you have Fever (Temp Above 38 degree celsuis)?"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:onClick="onCheckboxClicked"
                        android:id="@+id/test_fever"
                        />
                    <CheckBox
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Do you have Difficulty Breathing?"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:onClick="onCheckboxClicked"
                        android:id="@+id/test_difficult"
                        />
                    <CheckBox
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Do you have MYALGIA or Body Aches?"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:id="@+id/test_body_aches"
                        android:onClick="onCheckboxClicked"
                        />
                    <CheckBox
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Have you travelled recently in the Last 14 days?"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:id="@+id/test_recent_travel"
                        android:onClick="onCheckboxClicked"
                        />
                    <CheckBox
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Do you have a travel history to a COVID-19 Infected Area?"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:onClick="onCheckboxClicked"
                        android:id="@+id/test_travel_history"
                        />
                    <CheckBox
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Did you have direct contact or are taking care of a COVID-19 Patient?"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:onClick="onCheckboxClicked"
                        android:id="@+id/test_direct_contact"
                        />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/black"
                    android:hint="Name"
                    android:background="@drawable/border_black"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:textColor="@color/black"
                        android:textAlignment="textStart"
                        android:padding="5dp"
                        android:id="@+id/test_name"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:hintTextColor="@color/black"
                    android:hint="Phone Number"
                    android:background="@drawable/border_black"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:textAlignment="textStart"
                        android:maxLength="11"
                        android:padding="5dp"
                        android:id="@+id/test_number"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/border_black"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="State"
                            android:textColor="@color/black"

                            />
                        <TextView
                            android:layout_marginStart="140dp"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LGA"
                            android:textColor="@color/black"

                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <Spinner
                            android:id="@+id/stateSpinner"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1" />

                        <Spinner
                            android:id="@+id/lgaSpinner"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>


                <Button
                    android:layout_marginTop="20dp"
                    android:id="@+id/submit_test"
                    android:background="@drawable/background_red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:text="Submit Test"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"

                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </ScrollView>

</RelativeLayout>