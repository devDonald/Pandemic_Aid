<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:id="@+id/lay0"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_head1"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="How Can We Help You?"
                />

            <View
                android:layout_marginStart="10dp"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:layout_height="2dp"
                android:background="@android:color/black"
                />
            <View
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="@android:color/black"

                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_head2"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Pick a Category that relates to you"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/lay0"
            android:id="@+id/lay1"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_margin="3dp"
                app:cardElevation="10dp"
                >
                <LinearLayout
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorPrimaryDark"
                    >
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:padding="3dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:text="I am Having Symptoms of COVID-19"
                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:textColor="@android:color/white"
                        android:text="I suspect i may already be infected"
                        />

                    <Button
                        android:layout_marginTop="15dp"
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:id="@+id/take_test"
                        android:ems="8"
                        android:background="@drawable/background_red"
                        android:text="Get Tested"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:id="@+id/lay2"
            android:layout_below="@id/lay1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_margin="3dp"
                app:cardElevation="10dp"
                >
                <LinearLayout
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorPrimaryDark"
                    >
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:text="I want to report a suspected Case"
                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:textColor="@android:color/white"
                        android:text="Tell us what you have observed"
                        />

                    <Button
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:textColor="@android:color/white"
                        android:id="@+id/report_case"
                        android:ems="8"
                        android:background="@drawable/background_red"
                        android:text="Report Case"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </RelativeLayout>

</ScrollView>